package edu.CSUSM.testTaker.UI.CustomObjects;

import java.awt.Color;
import java.awt.Font;

import javax.swing.JButton;
import javax.swing.border.EmptyBorder;

public class CustomButton extends JButton {

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	
	public CustomButton(String buttonName){
		super(buttonName);
		
		//Build the button
		build();
	}
	
	private void build(){
		
		//Remove the default values
		this.setContentAreaFilled(false);
		
		//Build the custom button
		this.setBackground(new Color(85,85,85));
		this.setOpaque(true);
		this.setBorder(new EmptyBorder(50,0,50,0));
		this.setForeground(Color.WHITE);
		this.setFont(new Font(Font.SERIF, Font.BOLD | Font.ITALIC, 24));
		
		
	}
	
	protected void paintComponent(Graphics g) {
	    if (getModel().isArmed()) {
	// You might want to make the highlight color 
	   // a property of the RoundButton class.
	      g.setColor(Color.lightGray);
	    } else {
	      g.setColor(getBackground());
	    }
	    g.fillOval(0, 0, getSize().width-1, 
	      getSize().height-1);

	// This call will paint the label and the 
	   // focus rectangle.
	    super.paintComponent(g);
	  }
	

}
